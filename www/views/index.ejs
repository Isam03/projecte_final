    <!-- Card -->
    <div class="m-2">
      <div class="card rounded-3"
        style="position: absolute; top: 72%; left: 5%; width: 90%; opacity: 95%; background-color: #03112b;">
        <div class="card-body rounded-2" id="bodyCard">
          <!-- Slider de categorias -->
          <br>

          <% if (categoria !=null) { %>
            <% categoria.forEach(element=> { %>
              <a class="icon-link icon-link-hover tituloCategoria" href="<%= " https://quedaya.herokuapp.com:3000/category/" +
                element._id %>">
                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor"
                  class="bi-people-fill" viewBox="0 0 16 16">
                  <path
                    d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7Zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm-5.784 6A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1h4.216ZM4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5Z" />
                </svg>
                <font class="colorText">
                  <%= element.titulo %>
                </font><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#c4d7e9"
                  class="bi bi-arrow-right" viewBox="0 0 16 16">
                  <path fill-rule="evenodd"
                    d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z" />
                </svg>
              </a>
              <div class="container swiper">
                <div class="slide-container">
                  <div class="card-wrapper swiper-wrapper">
                    <% if (events !=null) { %>
                      <% for(var i=0; i < events.length; i++) {%>
                        <% let coeficiente=Math.floor(events.length / events[i].numvisitas) %>
                          <% if (events[i] && events[i].id_categoria==element._id && coeficiente < 1) { %>

                            <div class="card swiper-slide">
                              <div class="image-box">
                                <a href="<%= " https://quedaya.herokuapp.com:3000/event/" + events[i]._id %>">
                                  <% if (events[i].id_categoria == "64620db0557e03e697a21024") { %>
                                    <img src="../../Imagenes/Imagenes prueba para escape rooms/escapeRoom<%= Math.floor(Math.random() * 9) + 1 %>.png" class="card-img-top" alt="...">
                                 <% }else if(events[i].id_categoria == "6462707e470fbf14d3749496") {%>
                                  <img src="../../Imagenes/Imagenes prueba para quedadas/quedadas<%= Math.floor(Math.random() * 9) + 1 %>.jpeg"  class="card-img-top" alt="...">
                                  <% }else{ %>
                                    <img src="../../Imagenes/Imagenes de prueba para eventos/evento<%= Math.floor(Math.random() * 9) + 1 %>.png"  class="card-img-top" alt="...">
                                  <% } %>
                                </a>
                              </div>
                              <div class="profile-details">
                                <img src="../Imagenes/profilePic.jpg" alt="" />
                                <div class="name-job">
                                  <h3 class="name" style="color: #c4d7e9;">
                                    <%= events[i].titulo %>
                                  </h3>
                                  <h4 class="job" style="color: #c4d7e9;">
                                    <%= events[i].descripcion.substring(0,20) %>
                                      <ion-icon name="information-circle" data-bs-toggle="tooltip"
                                        data-bs-placement="top" data-bs-title="<%= events[i].descripcion %>"
                                        style="margin-left: 10px; width: 15px; height: 15px; color: #0dcaf0;"></ion-icon>
                                  </h4>
                                  <% if (events[i].precio==0) { %>
                                    <h5><span
                                        class="position-absolute bottom-20  end-0 p-2 badge rounded-pill text-warning-emphasis bg-warning-subtle border border-2 border-warning-subtle">
                                        <b>GRATIS</b>
                                        <span class="visually-hidden">Preu</span>
                                      </span></h5>

                                    <% } else { %>
                                      <h5><span
                                          class="position-absolute bottom-20  end-0 p-2 badge rounded-pill text-success-emphasis bg-success-subtle border border-2 border-success-subtle">
                                          <%= events[i].precio %>â‚¬
                                            <span class="visually-hidden">Preu</span>
                                        </span></h5>
                                      <% } %>
                                </div>
                              </div>
                            </div>

                            <% } %>

                              <% } %>
                                <% } %>

                  </div>
                  <!-- <div class="swiper-button-next swiper-navBtn"></div>
                  <div class="swiper-button-prev swiper-navBtn"></div>
                  <div class="swiper-pagination"></div> -->
                </div>

              </div>
              <% }) %>
                <% } %>

        </div>

      </div>

    </div>



